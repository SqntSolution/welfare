<!--		<appender-ref ref="STDOUT" />-->
<!--	</logger>-->
	
	<!-- 아예 패키지 상위 전체에 대해서 추가해주자. -->
	<logger name="com.tf.cms" level="debug" additivity="false">
		<appender-ref ref="STDOUT" />
	</logger>

	<root level="INFO">
<!--		<appender-ref ref="STDOUT" />-->
	</root>

</configuration>