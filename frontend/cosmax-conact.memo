===== window용 nginx 다운로드
https://nginx.org/download/nginx-1.24.0.zip


===== nginx 설정

	client_max_body_size 0;

    server {
        listen       80;
        server_name  cosmax.local;

        error_page   500 502 503 504  /50x.html;
        location = /50x.html {
            root   html;
        }
		
		location / {
			proxy_pass  http://localhost:3000  ;
			proxy_http_version 1.1;
			proxy_set_header Upgrade $http_upgrade;
			proxy_set_header Connection "upgrade";
			proxy_set_header Host $host;			
		}
		
        location ~ ^(/api/|/api-static/|/swagger/) {
          #rewrite ^(.*)$  $1  break;
		  rewrite ^(.*)$  $1  break;
		  proxy_pass http://127.0.0.1:9000;
          # proxy_pass http://cosmax.remote:9000;  # => backend를 개발서버를 바라보도록 함.
          # proxy_pass http://cosmax-internet.remote:8090;  # => backend를 개발서버(인터넷망)를 바라보도록 함.
        }

    }    


